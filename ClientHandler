
import java.io.*;
import java.net.Socket;

public class ClientHandler implements Runnable {
    private Socket socket;
    private BufferedReader in;
    private PrintWriter out;
    private String clientName;

    public ClientHandler(Socket socket) {
        this.socket = socket;
        try {
            this.in = new BufferedReader(new InputStreamReader(socket.getInputStream()));
            this.out = new PrintWriter(socket.getOutputStream(), true);
            this.out.println("Enter your name:");
            this.clientName = in.readLine();
            MessageBroadcaster.broadcast(clientName + " has joined the chat!", this);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    public PrintWriter getWriter() {
        return out;
    }

    public String getClientName() {
        return clientName;
    }

    @Override
    public void run() {
        String message;
        try {
            while ((message = in.readLine()) != null) {
                String formatted = clientName + ": " + message;
                System.out.println(formatted);
                MessageBroadcaster.broadcast(formatted, this);
            }
        } catch (IOException e) {
            System.out.println(clientName + " disconnected.");
        } finally {
            ServerMain.clientHandlers.remove(this);
            MessageBroadcaster.broadcast(clientName + " left the chat.", this);
            try {
                socket.close();
            } catch (IOException ignored) {
            }
        }
    }
}
